@inherits LayoutComponentBase
@inject UserStateService UserStateService

<div class="page">
    <header class="header">
        <div class="logo-container">
            <a href="/" class="logo-link">
                <img src="/css/open-iconic/font/fonts/TeleТочка2.png" class="logo" />
            </a>
        </div>
        <nav class="top-menu">
            <ul>
                <li><NavLink href="/" Match="NavLinkMatch.All">Главная</NavLink></li>
                <li><NavLink href="services">Услуги</NavLink></li>
                <li><NavLink href="about">О нас</NavLink></li>
                <li><NavLink href="login">Личный кабинет</NavLink></li>
            </ul>
        </nav>
    </header>

    <div class="content-wrapper">
        <main class="main-content">
            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
    <footer class="footer">
        <p class="footer-text">2024 ТелеТочка. By Roman.</p>
    </footer>

</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if(firstRender)
        {
            await UserStateService.InitUserStateAsync();
        }
    }
}

<style>
    
.main-content {
        position: relative;
        top: -80px;
        display: flex;
        flex-direction: column;
    }
    .header {
        background-color: lightgrey;
        color: black;
        padding: 0;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .logo-container {
        margin-bottom: 1em;
    }

    .logo {
        height: 100px; /* Высота логотипа */
        width: auto;
    }

    .logo-link {
        display: inline-block;
        width: 100%;
        height: 100%;
    }

    .top-menu {
        background-color: lightgrey;
        padding: 3em 0; /* Внутренний отступ сверху и снизу */
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .top-menu ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .top-menu li {
            margin: 5em 0;
        }

        .top-menu a {
            text-decoration: none;
            color: black; /* Цвет текста ссылок */
